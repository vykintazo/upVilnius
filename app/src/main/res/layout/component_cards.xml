<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingStart="@dimen/keyline_4"
    android:paddingEnd="@dimen/keyline_4">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        app:cardElevation="0dp"
        app:strokeColor="#ddd"
        app:strokeWidth="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/card_body4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/keyline_5"
                android:alpha="?alphaEmphasisMedium"
                android:firstBaselineToTopHeight="@dimen/keyline_5"
                android:text="3 places"
                android:textAppearance="?textAppearanceBody2"
                app:layout_constraintBottom_toBottomOf="@+id/card_title4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.094"
                app:layout_constraintStart_toEndOf="@+id/card_title4"
                app:layout_constraintTop_toTopOf="@+id/card_title4"
                app:layout_constraintVertical_bias="1.0" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/card_body5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="?alphaEmphasisHigh"
                android:firstBaselineToTopHeight="@dimen/keyline_5"
                android:text="â‚¬0.97"
                android:textAppearance="?textAppearanceBody2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.937"
                app:layout_constraintStart_toEndOf="@+id/card_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.507" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/card_title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="?alphaEmphasisHigh"
                android:firstBaselineToTopHeight="40dp"
                android:src="@drawable/ic_location_on_black_24dp"
                app:layout_constraintBottom_toBottomOf="@+id/card_body2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.254"
                app:layout_constraintStart_toEndOf="@+id/card_title2"
                app:layout_constraintTop_toTopOf="@+id/card_body2"
                app:layout_constraintVertical_bias="1.0" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/card_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:alpha="?alphaEmphasisHigh"
                android:firstBaselineToTopHeight="40dp"
                android:src="@drawable/ic_directions_bus_black_24dp"
                app:layout_constraintBottom_toBottomOf="@+id/card_body"
                app:layout_constraintStart_toEndOf="@+id/card_body"
                app:layout_constraintTop_toTopOf="@+id/card_body"
                app:layout_constraintVertical_bias="1.0" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/card_body3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/keyline_5"
                android:alpha="?alphaEmphasisMedium"
                android:firstBaselineToTopHeight="@dimen/keyline_5"
                android:text="3 stops"
                android:textAppearance="?textAppearanceBody2"
                app:layout_constraintBottom_toBottomOf="@+id/card_title3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.089"
                app:layout_constraintStart_toEndOf="@+id/card_title3"
                app:layout_constraintTop_toTopOf="@+id/card_title3"
                app:layout_constraintVertical_bias="1.0" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/card_body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/keyline_5"
                android:alpha="?alphaEmphasisMedium"
                android:firstBaselineToTopHeight="@dimen/keyline_5"
                android:text="2.3h"
                android:textAppearance="?textAppearanceBody2"
                app:layout_constraintBottom_toBottomOf="@+id/card_title2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.031"
                app:layout_constraintStart_toEndOf="@+id/card_title"
                app:layout_constraintTop_toTopOf="@+id/card_title2"
                app:layout_constraintVertical_bias="1.0" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/card_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:alpha="?alphaEmphasisHigh"
                android:firstBaselineToTopHeight="40dp"
                android:src="@drawable/ic_access_time_black_24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/card_body2"
                app:layout_constraintHorizontal_bias="0.333"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_title"
                app:layout_constraintVertical_bias="0.625" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:alpha="?alphaEmphasisHigh"
                android:firstBaselineToTopHeight="40dp"
                android:src="@drawable/ic_directions_walk_black_24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/card_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/keyline_5"
                android:alpha="?alphaEmphasisMedium"
                android:firstBaselineToTopHeight="@dimen/keyline_5"
                android:text="3.9km"
                android:textAppearance="?textAppearanceBody2"
                app:layout_constraintBottom_toBottomOf="@+id/card_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.031"
                app:layout_constraintStart_toEndOf="@+id/card_title"
                app:layout_constraintTop_toTopOf="@+id/card_title"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>